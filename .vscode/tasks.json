{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "process",
			"command": "tools/build/build",
			"windows": {
				"command": ".\\tools\\build\\build.bat"
			},
			"options": {
				"env": {
					"DM_EXE": "${config:dreammaker.byondPath}"
				}
			},
			"problemMatcher": ["$dreammaker", "$tsc", "$eslint-stylish"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": "dm: reparse",
			"label": "Build All"
		},
		{
			"type": "dreammaker",
			"dme": "dragonfall.dme",
			"problemMatcher": ["$dreammaker"],
			"group": "build",
			"label": "dm: build - dragonfall.dme"
		},
		{
			"command": "${command:dreammaker.reparse}",
			"group": "build",
			"label": "dm: reparse"
		},
		{
			"type": "shell",
			"command": "tools/build/build tgui",
			"linux": {
				"command": "tools/build/build tgui"
			},
			"windows": {
				"command": ".\\bin\\tgui-build.cmd"
			},
			"problemMatcher": ["$tsc", "$eslint-stylish"],
			"group": "build",
			"label": "tgui: build"
		},
		{
			"type": "shell",
			"command": "tools/build/build tgui-dev",
			"linux": {
				"command": "tools/build/build tgui-dev"
			},
			"windows": {
				"command": ".\\bin\\tgui-dev.cmd"
			},
			"problemMatcher": ["$tsc", "$eslint-stylish"],
			"group": "build",
			"label": "tgui: dev server"
		},
		{
			"type": "shell",
			"command": "cd tgui && yarn tgui:bench",
			"linux": {
				"command": "cd tgui && yarn tgui:bench"
			},
			"windows": {
				"command": ".\\bin\\tgui-bench.cmd"
			},
			"problemMatcher": ["$tsc", "$eslint-stylish"],
			"group": "build",
			"label": "tgui: bench"
		},
		{
			"type": "shell",
			"command": "tools/build/build tgui-sonar",
			"linux": {
				"command": "tools/build/build tgui-sonar"
			},
			"windows": {
				"command": ".\\bin\\tgui-sonar.cmd"
			},
			"problemMatcher": ["$tsc", "$eslint-stylish"],
			"group": "build",
			"label": "tgui: sonar"
		},
		{
			"label": "Build All (Juke wrapper)",
			"type": "shell",
			"command": "tools/build/build build",
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		}
	]
}
